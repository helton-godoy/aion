{
  "name": "aion",
  "version": "1.0.0-alpha.1",
  "description": "AI Orchestration Native - Autonomous AI-driven development lifecycle combining BMAD Method robustness with GitHub-native orchestration philosophy",
  "main": "src/index.js",
  "keywords": [
    "aion",
    "ai-orchestration",
    "autonomous-development",
    "bmad-method",
    "github-native",
    "full-cycle",
    "ai-agents",
    "workflow-automation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/helton-godoy/aion"
  },
  "license": "MIT",
  "author": "Helton Godoy",
  "scripts": {
    "start": "node src/index.js",
    "setup:bmad": "npx bmad-method@alpha install",
    "aion:init": "node tools/aion/aion-init.js",
    "aion:workflow:github-full-cycle": "node tools/aion/github-full-cycle.js",
    "aion:memory:status": "node tools/aion/memory-status.js",
    "aion:state:reset": "node tools/aion/state-reset.js",
    "aion:agents:list": "node tools/aion/list-agents.js",
    "aion:setup:github": "node tools/aion/github-setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tools/ tests/ --ext .js",
    "lint:fix": "eslint src/ tools/ tests/ --ext .js --fix",
    "validate": "npm run lint && npm run test",
    "build": "npm run validate && npm run test:coverage",
    "dev": "npm run aion:init && npm start",
    "clean": "rm -rf node_modules/.cache/ .github/logs/ .github/reports/ tests/coverage/",
    "status": "node -e \"console.log('ðŸš€ AION v1.0.0-alpha.1 - AI Orchestration Native Ready!')\""
  },
  "dependencies": {
    "@octokit/rest": "^20.1.2",
    "dotenv": "^16.6.1",
    "fs-extra": "^11.3.0",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "semver": "^7.6.3",
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "boxen": "^5.1.2",
    "figlet": "^1.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.33.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.5.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "bin": {
    "aion": "./tools/cli/aion-cli.js",
    "aion-init": "./tools/aion/aion-init.js"
  },
  "files": [
    "src/",
    "tools/",
    "modules/",
    "README.md",
    "LICENSE"
  ],
  "aion": {
    "version": "1.0.0",
    "features": [
      "autonomous-orchestration",
      "memory-banking",
      "safety-protocol",
      "state-machine",
      "github-native",
      "bmad-integration"
    ],
    "modules": [
      "core",
      "aion",
      "agents",
      "workflows",
      "memory",
      "state",
      "safety",
      "platform"
    ],
    "workflows": {
      "github-full-cycle": "tools/aion/github-full-cycle.js",
      "memory-status": "tools/aion/memory-status.js",
      "state-reset": "tools/aion/state-reset.js"
    },
    "agents": {
      "github-pm": "src/modules/aion/agents/github-pm.js",
      "github-architect": "src/modules/aion/agents/github-architect.js",
      "github-developer": "src/modules/aion/agents/github-developer.js",
      "github-qa": "src/modules/aion/agents/github-qa.js"
    },
    "quality": {
      "test-coverage": ">=90%",
      "eslint-rules": "recommended",
      "performance-threshold": "200ms",
      "memory-limit": "100MB"
    }
  }
}
